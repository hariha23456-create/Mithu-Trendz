<script>
const CSV_URL="https://docs.google.com/spreadsheets/d/e/2PACX-1vT3Tt8X_vacw9KXXTB0m4Vr8waCil7dZWhjk0H_uMiQ9j9mT9TztsMvPRnh1TUGUImRYpdSKZcVML4B/pub?output=csv";
const PRICE=349, COMBO=1049, PHONE="916381156917";

let data=[],cart=[],selectedSize="",current=null;

fetch(CSV_URL).then(r=>r.text()).then(t=>{
 t.split("\n").slice(1).forEach(r=>{
  let c=r.split(",");
  if(c[0]&&c[1]) data.push({size:c[0].trim(),id:c[1].trim()});
 });
 loadAll();
});

function updateCart(){
 cartCount.innerText="Selected: "+cart.length;
 cartNum.innerText=cart.length;
 floatCart.style.display=cart.length?"block":"none";
}

function calculateTotal(){
 let combos=Math.floor(cart.length/3);
 let rem=cart.length%3;
 return combos*COMBO + rem*PRICE;
}

function loadAll(){
 selectedSize="";cart=[];updateCart();
 let shown=new Set();photos.innerHTML="";
 data.forEach(d=>{if(!shown.has(d.id)){shown.add(d.id);render(d.id)}});
}

function loadSize(size,btn){
 selectedSize=size;cart=[];updateCart();
 document.querySelectorAll(".size-btn").forEach(b=>b.classList.remove("active"));
 btn.classList.add("active");
 photos.innerHTML="";
 data.filter(d=>d.size===size).forEach(d=>render(d.id));
}

function render(id){
 photos.innerHTML+=`
 <div class="card">
  <span class="badge">SAVE 58%</span>
  <span class="badge secondary">BEST SELLER</span>
  <img src="https://lh3.googleusercontent.com/d/${id}" onclick="openProduct('${id}',this.src)">
  <div class="price"><b>‚Çπ349</b><del>‚Çπ849</del><span>58% OFF</span></div>
 </div>`;
}

function openProduct(id,src){
 current={id:id,size:selectedSize};
 modalImg.src=src;
 productModal.style.display="block";
}
function closeProduct(){productModal.style.display="none"}

function addToCart(){
 if(!current||!current.size){alert("Select size first");return;}
 cart.push(current);
 updateCart();
 closeProduct();
}

function openCart(){
 let html=`<div class="cart-swipe">`;
 cart.forEach((i,idx)=>{
  html+=`
   <div class="cart-item">
    <img src="https://lh3.googleusercontent.com/d/${i.id}">
    <div><b>Size:</b> ${i.size}</div>
    <button class="remove-btn" onclick="removeItem(${idx})">‚ùå Remove Item</button>
   </div>`;
 });
 html+=`</div>`;
 cartItems.innerHTML=html;
 totalPrice.innerText="Total Price: ‚Çπ"+calculateTotal();
 cartModal.style.display="block";
}

function closeCart(){cartModal.style.display="none"}

function removeItem(i){
 cart.splice(i,1);
 updateCart();
 cart.length?openCart():closeCart();
}

function orderWhatsApp(){
 let msg="Hello, I want to order from MITHU TRENDS üëó\n\n";
 cart.forEach((item,index)=>{
  msg+=(index+1)+". Product Image:\nhttps://lh3.googleusercontent.com/d/"+item.id+"\nSize: "+item.size+"\n\n";
 });
 msg+="Total Items: "+cart.length+"\nTotal Price: ‚Çπ"+calculateTotal();
 window.open("https://wa.me/"+PHONE+"?text="+encodeURIComponent(msg));
}
</script>

